version: ‘1’

services:
  redis:
    image: redis:3.2.0
    ports:
        - "6543:6543"
    volumes:
        - /root/docker/redis:/var/redis/
    #command: redis-server /var/redis/redis.conf
    command: /bin/bash

  mysql:
    build: ./mysql
    expose:
        - 437

  server:
    build: ./server
    volumes:
        - /data:/data
    links:
        - redis
        - mysql
    expose:
        - 8200
